<h1>Ember Simple Auth Test</h1>

<h2>User Status:</h2>
{{#if session.isAuthenticated}}
  <button type="button" {{action 'invalidateSession'}}>Logout</button>
  {{#if sessionAccount.userId}}
    <span>Signed in as: {{sessionAccount.userId}}</span>
  {{/if}}
{{else}}
  {{#link-to 'login'}}Login{{/link-to}}
{{/if}}

<h2>Navigation</h2>
<ul>
  <li>{{#link-to "index"}}Index{{/link-to}}</li>
  <li>{{#link-to "login"}}Login{{/link-to}}</li>
  <li>{{#link-to "protected"}}Protected{{/link-to}}</li>
</ul>

<hr />

{{outlet}}
